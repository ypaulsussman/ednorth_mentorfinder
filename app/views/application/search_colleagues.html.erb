<h1>sup yo it's the search page</h1>

<hr>

<%= search_form_for @q, url: colleagues_path do |f| %>
  <%= f.label :first_name_cont %>
  <%= f.search_field :first_name_cont %>
  
  <br/>
  
  <%= f.label :need_help_or_interested_in_cont, "People who need help with:" %>
  <%= f.search_field :need_help_or_interested_in_cont %>

  <br/>

  <%= f.label :bio_or_can_help_cont, "People who can help with:" %>
  <%= f.search_field :bio_or_can_help_cont %>

  <br/>

<%= f.submit %>
<% end %>

<hr>

<div id="colleagues">
  <% @people.each do |person| %>
    <p><strong>Name:</strong> <%= person.last_name %>, <%= person.first_name %></p>
    <p><strong>Email:</strong> <%= person.email %></p>
    <p><strong>Bio:</strong> <%= person.bio %></p>
    <p><strong>Can Help With:</strong> <%= person.can_help %></p>
    <p><strong>Needs Help With:</strong> <%= person.need_help %></p>
    <p><strong>Wants to Learn More About:</strong> <%= person.interested_in %></p>
    <br/>
  <% end %>
</div>